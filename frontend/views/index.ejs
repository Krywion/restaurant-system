<div class="bg-light p-5 rounded-3 mb-4">
    <h1 class="display-4">Welcome to Restaurant System</h1>
    <p class="lead"><%= body %></p>
    <hr class="my-4">
    <% if (typeof features !== 'undefined') { %>
        <div class="row mb-4">
            <% features.forEach(function(feature) { %>
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">✓ <%= feature %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-book fs-1 mb-3 text-primary"></i>
                <h5 class="card-title">Menu</h5>
                <p class="card-text">Przeglądaj menu restauracji</p>
                <a href="/menu" class="btn btn-primary">Przejdź do menu</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-plus-circle fs-1 mb-3 text-success"></i>
                <h5 class="card-title">Nowe zamówienie</h5>
                <p class="card-text">Złóż nowe zamówienie</p>
                <a href="/orders/new" class="btn btn-success">Zamów</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-list-check fs-1 mb-3 text-info"></i>
                <h5 class="card-title">Aktywne zamówienia</h5>
                <p class="card-text">Sprawdź bieżące zamówienia</p>
                <a href="/orders" class="btn btn-info text-white">Aktywne</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-clock-history fs-1 mb-3 text-secondary"></i>
                <h5 class="card-title">Historia</h5>
                <p class="card-text">Zobacz historię zamówień</p>
                <a href="/orders/history" class="btn btn-secondary">Historia</a>
            </div>
        </div>
    </div>
</div>